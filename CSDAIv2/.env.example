# Intellicket CSDAIv2 Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Flask Application Settings
FLASK_ENV=development
FLASK_SECRET_KEY=your-flask-secret-key-here-change-in-production
PORT=5003

# Claude AI Configuration (Required for AI Analysis)
# Get your API key from: https://console.anthropic.com/
OPENAI_API_KEY=your-claude-api-key-here
OPENAI_BASE_URL=https://api.rdsec.trendmicro.com/prod/aiendpoint/v1/
OPENAI_MODEL=claude-4-sonnet

# File Upload Settings
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
TEMP_DIR=temp

# Dynamic RAG Configuration
RAG_PDF_DIRECTORY=pdf
RAG_MAX_KNOWLEDGE_SOURCES=6
RAG_MAX_DYNAMIC_QUERIES=8
RAG_PROMPT_MAX_LENGTH=8000
RAG_ENABLE_AI_RESPONSES=true

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1

# Development/Debug Settings
DEBUG=true
